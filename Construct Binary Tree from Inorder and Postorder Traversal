class Solution:
    def buildTree(self, inorder: List[int], postorder: List[int]) -> Optional[TreeNode]:
        if not inorder or not postorder:
            return None
        
        # Root is last element in postorder
        root_val = postorder.pop()
        root = TreeNode(root_val)
        
        # Find root index in inorder array
        index = inorder.index(root_val)
        
        # Recursively build right and left subtrees
        # Important: build right subtree before left subtree because
        # postorder traversal is left -> right -> root, and we are popping
        # from the end, so right subtree comes before left subtree in reversed order
        root.right = self.buildTree(inorder[index+1:], postorder)
        root.left = self.buildTree(inorder[:index], postorder)
        
        return root
